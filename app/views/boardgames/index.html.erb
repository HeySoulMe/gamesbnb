<div class="container-xxl">
	<div class="row">
		<div class="col-6 m-4">
			<h3 class="row d-flex flex-column mb-4">
				Boardgames close to your localisation:
			</h3>
			<div class="cards-index">
				<% @boardgames.each do |boardgame| %>
					<div class="card-index d-flex">
						<% if boardgame.photos.attached? %>
						  <%= cl_image_tag boardgame.photos.first.key, width: 160, height: 160, crop: :fill, radius: 24, padding: 22 %>
						<% end %>
						<div class="description text-center">
							<h4><%=boardgame.name %></h4>
							<hr>
							<p class="description-content text-left"><%= boardgame.description.truncate_words(12) %></p>
							<p class="description-category text-left"><%= boardgame.category %></p>
							<p class="players"><%= boardgame.players %> <i class="fas fa-user-friends"></i></p>
							<p class="price"><strong><%= boardgame.price.to_i %>â‚¬</strong> / day</p>
						</div>
					</div>
				<% end %>
			</div>
		</div>
		<!--<div class="map-container col-5">-->
		<div id="map"
     		style="width: 100%;"
     		data-markers="<%= @markers.to_json %>"
     		data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
	</div>
</div>