<div class="container-xxl">
	<div class="row">
		<div class="col-7 m-4">
			<div class="row d-flex flex-column mb-4">
				<h3>Boardgames close to your localisation:</h3>
			</div>
			<div class="cards-index">
				<% @boardgames.each do |boardgame| %>
					<div class="card-index d-flex">
						<% if boardgame.photos.attached? %>
						  <!-- <div><%#= cl_image_tag("lwuozq4abmjrul25vlj9xtsrabss", width: 180, height: 180, crop: :fill, radius: 24, padding: 22) %></div> -->
						  <%= cl_image_tag boardgame.photos.first.key, width: 180, height: 180, crop: :fill, radius: 24, padding: 22 %>
						<% end %>
						<div class="description text-center">
							<h4><%= boardgame.name %></h4>
							<hr>
							<p class="description-content text-left"><%= boardgame.category %></p>
							<p class="players"><%= boardgame.players %> <i class="fas fa-user-friends"></i></p>
							<p class="description-content text-left"><strong><%= boardgame.price.to_i %>â‚¬</strong> / day</p>
						</div>
					</div>
				<% end %>
			</div>
		</div>
		<div class="map-container col-5">MAP</div>
	</div>
</div>