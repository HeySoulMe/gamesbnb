<div id="map"
  style="width: 100%; height: 400px; background;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
<div class="container">
  <div class="row">
    <div class="col-8-show">
      <div class="game-show-title-card">
        <h1><%= @boardgame.name %></h1>
      </div>
      <div class="picture-descr-show-card">
        <%= cl_image_tag @boardgame.photos.first.key, width:300 , height:300, crop: :fill %>
        <h3>Description</h3>
        <p><%= @boardgame.description %></p>
        <%= @boardgame.players %> <i class="fas fa-user-friends"></i>
      </div>
    </div>
    <div class="col-4-show">
      <div class="booking-show-card" data-price="<%=@price%>"> 
      <h2>Book your boardgame</h2>
        <%= render "/shared/form"%>
      </div>
      <div class="price-card-show">
        <p><%= "RENTAL PRICE : #{@boardgame.price} â‚¬ / day" %></p>
        <p id = "total-amount"></p>
        </div>
        <div class="owner-show-card">
        <h4>Owner info</h4>
        <%= "#{@boardgame.user.first_name} "" #{@boardgame.user.last_name}" %>
        <%= @boardgame.address %>
        </div>
      </div>
    </div>
  </div>
  <%= link_to "Back to the Boardgames List", boardgames_path %>
</div>

