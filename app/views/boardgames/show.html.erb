<div id="map" class="mapshow"
  style="width: 100%; height: 400px; background;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
<div class="container" style="margin-top: -145px;">
  <div class="row">
    <div class="col-8-show">
      <div class="game-show-title-card">
        <h1><%= @boardgame.name %></h1>
        <%= "#{@boardgame.user.first_name} "" #{@boardgame.user.last_name} - #{@boardgame.address}" %>
      </div>
      <div class="picture-descr-show-card">
        <div class="content-show d-flex">
          <div class="photo-pr-show">
            <%= cl_image_tag @boardgame.photos.first.key, width:300 , height:300, crop: :fill %>
          </div>
          <div class="text-pr-show">
            <h5>A bit more about this boardgame ...</h5>
            <p><%= @boardgame.description %></p>
          </div>
        </div>
      </div>
    </div>
    <div class="col-4-show">
      <div class="booking-show-card" data-price="<%=@price%>"> 
      <h2>Book your boardgame</h2>
        <%= render "/shared/form"%>
        <p id = "total-amount"></p>
      </div>
      <div class="price-card-show">
        <p><%= "#{@boardgame.price.to_i} â‚¬ / day" %></p>
        <%= "#{@boardgame.players}" %> <i class="fas fa-user-friends"></i>
        </div>
        <div class="share-show-card">
          <h4>Share it !</h4>
          <div class="show-links">
          <a href="#" ><i class="fab fa-instagram fa-2x mr-2"></i></a>
          <a href="#" ><i class="fab fa-facebook fa-2x mr-2"></i></a>
          <a href="#" ><i class="fab fa-twitter fa-2x mr-2"></i></a>
          </div>
        </div>
      </div>
    </div>
    <%= link_to ('<i class="fas fa-arrow-circle-left style="color:black !important"></i>').html_safe, boardgames_path %>
  </div>
</div>

